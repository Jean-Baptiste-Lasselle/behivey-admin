<div class="jumbo show-listing">
  <div class="row">
    <div class="col-xs-9 col-xs-offset-0 col-sm-9 col-sm-offset-0 col-md-9 col-md-offset-0">
        <h3 class="title">Class: <strong>{{hive.name}}</strong></h3>
    </div>
  </div>

  <br/>
  <div class="form-horizontal form-group form-group-lg row well">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
        <h4>Name:</h4>
        {{input value=name class="form-control" placeholder="Please enter a name"}}
        <br/>

        <h4>Description:</h4>
        {{textarea value=description class="form-control" placeholder="Please enter a description"}}
        <br/>

      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-9 col-xs-offset-0 col-sm-9 col-sm-offset-0 col-md-9 col-md-offset-0">
        <h3 class="title">Settings</h3>
    </div>
  </div>

  <div class="form-horizontal form-group form-group-lg row well">
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">
        {{#each hive.options as |option|}}
          <h4>{{option.Name}}:</h4>
          <input type="text" onchange={{action (action "updateOption" option) value="target.value"}} value={{option.Value}} class="form-control" placeholder={{option.Description}}>
          {{#if option.Mandatory}}
          <div class="alert alert-warning" role="alert">This is a required value</div>
          {{/if}}
        {{/each}}
      </div>
    </div>
    <br/>
  </div>

  <br/>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
        <button disabled={{isDisabled}} {{action 'createBee'}} class="btn btn-primary btn-lg btn-block">Create Bee</button>
    </div>
  </div>

  {{#if errorMessage}}
  <br/>
  <div class="row alert alert-danger">{{errorMessage}}</div>
  {{/if}}

</div>
