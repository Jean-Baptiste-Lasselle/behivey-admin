<div>
  <h4>Existing Chains</h4>
  {{#if chains}}
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each chains as |chain|}}
          <tr>
            <td class="td-centered">
              {{#link-to "chains.show.summary" chain.id}}{{chain.name}}{{/link-to}}
            </td>
            <td class="td-centered">{{chain.description}}</td>
            <td class="td-centered"><button {{action 'deleteChain' chain}} class="btn btn-danger btn-sm btn-block">Delete</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <br/>
    <div class="alert alert-warning">
      You haven't created any Chains yet.
    </div>
  {{/if}}

  <br/>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-offset-3 col-sm-6 col-md-4 col-md-offset-4">
      {{#link-to "chains.new.pickbee" tagName="button" class="btn btn-primary btn-lg btn-block" }}Create a new Chain{{/link-to}}
    </div>
  </div>

</div>
