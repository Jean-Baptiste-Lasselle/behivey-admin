<div>
  <h1 class="text-center"><b>Pick an Event</b></h1>

  <div class="row list-group">

    {{#each bee.namespace.events as |event|}}

    <div class="item col-xs-4 col-lg-4">
        <div {{action "pickEvent" event on="click"}} class="thumbnail" style="background-color: {{bee.namespace.logocolor}}">
            <div class="caption">
                <h3 class="group inner list-group-item-heading">{{event.Name}}</h3>
                <p class="group inner list-group-item-text">{{event.Description}}</p>
            </div>
        </div>
    </div>

    {{/each}}

  </div>

  {{#if isEventSet}}
  <div class="jumbo show-listing">
  <h1 class="text-center"><b>Configure Event Filters</b></h1>
  <div class="form-horizontal form-group form-group-lg row">
    <div class="well">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Type</th>
            </tr>
          </thead>
          <tbody>

              {{#each event.Options as |option|}}
              <tr>
                  <td><i>{{option.Name}}</i></td>
                  <td>{{option.Description}}</td>
                  <td>{{option.Type}}</td>
              </tr>
              {{/each}}

          </tbody>
        </table>

            <h4>Examples</h4>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Filter</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each filterExamples as |example|}}
                    <tr>
                        <td>{{example.Filter}}</td>
                        <td>{{{example.Description}}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <h5>Find more examples in our <a target="_blank" href="https://github.com/muesli/beehive/wiki/Available-Action-&-Filter-helper-methods">Wiki</a>.</h5>

        <div class="row">
          <div class="col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1">

            {{#each filters as |filter index|}}
              <h4>Filter #{{index}}</h4>
              <input type="text" onchange={{action (action "updateFilter" index) value="target.value"}} value={{filter}} class="form-control" placeholder="Enter a filter condition">
              <button {{action 'deleteFilter' index}} class="btn btn-danger btn-block">Delete Filter</button>
            {{/each}}

          </div>
        </div>

        <br/>
        <div class="row">
          <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-2 col-md-offset-5">
            <button {{action 'addFilter'}} class="btn btn-primary btn-lg btn-block">Add Filter</button>
          </div>
        </div>

        </div>
      </div>
  </div>
  <br/>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-8">
      <button disabled={{isDisabled}} {{action 'nextStep'}} class="btn btn-primary btn-lg btn-block">Continue</button>
    </div>
  </div>
  {{/if}}
</div>
